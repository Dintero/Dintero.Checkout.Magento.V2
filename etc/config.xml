<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <dintero>
                <active>0</active>
                <sandbox>1</sandbox>
                <title>Dintero</title>
                <is_embedded>1</is_embedded>
                <is_express>1</is_express>
                <order_on_hold_status>dintero_pending_approval</order_on_hold_status>
                <payment_action>authorize</payment_action>
                <express_button_type>Dintero_Checkout::images/dintero-express-btn-dark.svg</express_button_type>
                <model>Dintero\Checkout\Model\Dintero</model>
                <order_place_redirect_url>http://localhost/</order_place_redirect_url>
                <can_initialize>0</can_initialize>
                <can_use_internal>0</can_use_internal>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>
                <can_capture_once>0</can_capture_once>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <precision>2</precision>
                <fetch_transaction_information>1</fetch_transaction_information>
                <can_fetch_transaction_information>1</can_fetch_transaction_information>
                <logo_type>mono</logo_type>
                <logo_color>444444</logo_color>
                <logo_width>600</logo_width>
                <language>en_US</language>
                <payment_email>payment_dintero_payment_email</payment_email>
                <expiration_days>1</expiration_days>
                <shipping_methods_map>pickup</shipping_methods_map>
                <id_field>sku</id_field>
                <allow_different_shipping>b2c,b2b</allow_different_shipping>
                <allowed_customer_types>b2c,b2b</allowed_customer_types>
            </dintero>
        </payment>
    </default>
</config>
